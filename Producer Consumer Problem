#include <stdio.h>
#include <semaphore.h>
#include <pthread.h>
#include <unistd.h>

sem_t empty, full;
int buffer = 0;

void* producer(void* arg)
{
    int item = 1;
    while(1)
    {
        sem_wait(&empty);
        buffer = item;
        printf("Producer produced item %d\n", item++);
        sem_post(&full);
        sleep(1);
    }
}

void* consumer(void* arg)
{
    while(1)
    {
        sem_wait(&full);
        printf("Consumer consumed item %d\n", buffer);
        sem_post(&empty);
        sleep(1);
    }
}

int main()
{
    pthread_t p, c;

    sem_init(&empty, 0, 1);
    sem_init(&full, 0, 0);

    pthread_create(&p, NULL, producer, NULL);
    pthread_create(&c, NULL, consumer, NULL);

    pthread_join(p, NULL);
    pthread_join(c, NULL);

    return 0;
}
