#include <stdio.h>
#include <unistd.h>
#include <string.h>

int main()
{
    int fd[2];
    char write_msg[] = "Hello from Parent";
    char read_msg[50];

    pipe(fd);   // Create pipe

    if (fork() == 0)
    {
        // Child process
        close(fd[1]);   // Close write end
        read(fd[0], read_msg, sizeof(read_msg));
        printf("Child received: %s\n", read_msg);
        close(fd[0]);
    }
    else
    {
        // Parent process
        close(fd[0]);   // Close read end
        write(fd[1], write_msg, strlen(write_msg) + 1);
        close(fd[1]);
    }

    return 0;
}
