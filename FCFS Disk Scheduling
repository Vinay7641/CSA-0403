#include <stdio.h>
#include <stdlib.h>

int main()
{
    int queue[50], n, head, i;
    int seek = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk request queue:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &queue[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    seek += abs(head - queue[0]);

    for(i = 1; i < n; i++)
        seek += abs(queue[i] - queue[i-1]);

    printf("\nTotal Seek Time = %d\n", seek);

    return 0;
}
