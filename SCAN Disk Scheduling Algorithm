#include <stdio.h>
#include <stdlib.h>

int main()
{
    int queue[50], n, head, i, j, size, temp;
    int seek = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk request queue:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &queue[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    queue[n] = head;
    n++;

    // Sort requests
    for(i = 0; i < n; i++)
        for(j = i+1; j < n; j++)
            if(queue[i] > queue[j])
            {
                temp = queue[i];
                queue[i] = queue[j];
                queue[j] = temp;
            }

    int pos;
    for(i = 0; i < n; i++)
        if(queue[i] == head)
            pos = i;

    for(i = pos; i < n-1; i++)
        seek += abs(queue[i] - queue[i+1]);

    seek += abs(queue[n-1] - (size - 1));

    for(i = pos-1; i >= 0; i--)
        seek += abs(queue[i+1] - queue[i]);

    printf("\nTotal Seek Time = %d\n", seek);

    return 0;
}
