#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main()
{
    int fd;
    char buffer[50];

    // Create and open file
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);

    // Write to file
    write(fd, "Hello UNIX System Calls", 24);

    // Move file pointer to beginning
    lseek(fd, 0, SEEK_SET);

    // Read from file
    read(fd, buffer, 24);
    buffer[24] = '\0';

    printf("Data read from file: %s\n", buffer);

    close(fd);
    return 0;
}
